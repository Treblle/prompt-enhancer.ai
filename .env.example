# Server Configuration
PORT=5000
NODE_ENV=development  # Options: development, production, test

# API Configuration
# For development, use a random key generated by setup-env.js
# For production, set this in your deployment platform (GitHub Actions/Vercel)
API_KEY=

# CORS Configuration
# Comma-separated list of allowed origins (defaults to localhost:3000 in dev)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://prompt-enhancer.ai,,https://www.prompt-enhancer.ai

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
IP_MAX_REQUESTS_PER_MINUTE=30
API_KEY_MAX_REQUESTS_PER_MINUTE=100

# Redis Configuration (optional, falls back to in-memory if not provided)
# REDIS_URL=redis://localhost:6379

# AI Provider Configuration
# Choose between 'openai' or 'mistral'
AI_PROVIDER=openai

# OpenAI Credentials (required if AI_PROVIDER=openai)
# For development, set your key here
# For production, set this in your deployment platform (GitHub Actions/Vercel)
OPENAI_API_KEY=

# Mistral AI Credentials (required if AI_PROVIDER=mistral)
# For development, set your key here
# For production, set this in your deployment platform (GitHub Actions/Vercel)
# MISTRAL_API_KEY=

# Treblle Configuration (only used in production)
# Set these in your deployment platform (GitHub Actions/Vercel)
# TREBLLE_API_KEY=
# TREBLLE_PROJECT_ID=

# Logging
LOG_LEVEL=debug  # Options: error, warn, info, debug