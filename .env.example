# Server Configuration
PORT=5000
NODE_ENV=development  # Options: development, production, test

# API Configuration
API_KEY=071ab274d796058af0f2c1c205b78009670fc774bd574960

# CORS Configuration
# Comma-separated list of allowed origins (defaults to localhost:3000 in dev)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://prompt-enhancer.ai

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
IP_MAX_REQUESTS_PER_MINUTE=30
API_KEY_MAX_REQUESTS_PER_MINUTE=100

# Redis Configuration (optional, falls back to in-memory if not provided)
# REDIS_URL=redis://localhost:6379

# AI Provider Configuration
# Choose between 'openai' or 'mistral'
AI_PROVIDER=openai

# OpenAI Credentials (required if AI_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Mistral AI Credentials (required if AI_PROVIDER=mistral)
# MISTRAL_API_KEY=your_mistral_api_key_here

# Logging
LOG_LEVEL=debug  # Options: error, warn, info, debug

# Treblle (Only used in production environment)
# Get these values from your Treblle dashboard: https://app.treblle.com/
TREBLLE_API_KEY=your_treblle_api_key_here
TREBLLE_PROJECT_ID=your_treblle_project_id_here